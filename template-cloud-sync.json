{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Domains": {
            "defaultValue": "example.nl, company.com",
            "type": "String",
            "metadata": {
                "description": "Domains that need syncing, separated by comma"
            }
        },
        "ZivverApiKey": {
            "defaultValue": "Z1-xxxxxxxxxx",
            "type": "SecureString",
            "metadata": {
                "description": "Zivver API key generated in admin portal"
            }
        }
    },
    "variables": {
        "automationAccountName" : "ZivverCloudSync"
    },
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2023-11-01",
            "name": "[variables('automationAccountName')]",
            "location": "westus",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "disableLocalAuth": false,
                "sku": {
                    "name": "Basic"
                },
                "encryption": {
                    "keySource": "Microsoft.Automation",
                    "identity": {}
                }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/Loader')]",
            "location": "westus",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "runbookType": "Python3",
                "logVerbose": false,
                "logProgress": false,
                "logActivityTrace": 0
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__PERFORM_SYNC')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "false"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__ZIVVER_API_KEY')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": true,
                "value": "[concat('[\"', parameters('ZivverApiKey'), '\"]')]"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__ZIVVER_API_URL')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "\"https://app.zivver.com/api\""
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__CLAIMED_DOMAINS')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('[\"', parameters('Domains'), '\"]')]"
            }
        }
    ]
}
