{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ZivverApiKey": {
            "type": "SecureString",
            "metadata": {
                "description": "Zivver API key generated in the admin portal (app.zivver.com/organization/api-keys)"
            }
        },
        "IncludedDomains": {
            "type": "String",
            "metadata": {
                "description": "Domain(s) that should be INCLUDED in the sync, separated by comma"
            }
        },
        "TargetFilter": {
            "type": "String",
            "defaultValue" : " ",
            "metadata": {
                "description": "Email(s) or domain(s) in Zivver that should be EXCLUDED from the sync, separated by comma"
            }
        }
    },
    "variables": {
        "automationAccountName" : "ZivverCloudSync",
        "loaderUri" : "https://downloads.zivver.com/cloudsync/loader.py"
    },
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2023-11-01",
            "name": "[variables('automationAccountName')]",
            "location": "westus",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "disableLocalAuth": false,
                "sku": {
                    "name": "Basic"
                },
                "encryption": {
                    "keySource": "Microsoft.Automation",
                    "identity": {}
                }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/ZivverCloudSyncLoader')]",
            "location": "westus",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "runbookType": "Python3",
                "logVerbose": false,
                "logProgress": false,
                "logActivityTrace": 0,
                "publishContentLink": {
                    "uri": "[variables('loaderUri')]"
                  }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__PERFORM_SYNC')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "false"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__ZIVVER_API_KEY')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": true,
                "value": "[concat('\"',parameters('ZivverApiKey'),'\"')]"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__ZIVVER_API_URL')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "\"https://app.zivver.com/api\""
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__LOG_LEVEL')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": true,
                "value": "\"INFO\""
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__CLAIMED_DOMAINS')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('\"',parameters('IncludedDomains'),'\"')]"
            }
        },        
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2023-11-01",
            "name": "[concat(variables('automationAccountName'), '/CLOUD_SYNC__TARGET_FILTER')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('\"',parameters('TargetFilter'),'\"')]"
            }
        }
    ]
}
